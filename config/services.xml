<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>
        <prototype namespace="Papertowel\" resource="../src/*"
                   exclude="../src/{Entity,Migration,Tests,Service,Bundles,Framework}"/>

        <service id="Papertowel\Service\Session\SessionProvider" autowire="true" public="true">
            <argument type="service" id="request_stack"/>
        </service>
        <service id="papertowel.service.session.session_provider" alias="Papertowel\Service\Session\SessionProvider"/>

        <prototype namespace="Papertowel\Controller\" resource="../src/Controller">
            <!--<argument type="service" id="service_container"/>-->
        </prototype>
    </services>
</container>
