<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>
        <prototype namespace="Papertowel\" resource="../src/*"
                   exclude="../src/{Entity,Migration,Tests,Service,Bundles}"/>

        <!--suppress XmlServiceArgumentInspection -->
        <service id="website" synthetic="true" public="true" class="Papertowel\Entity\Website" autowire="false">
        </service>

        <!--suppress XmlServiceArgumentInspection -->
        <service id="theme" synthetic="true" public="true" class="Papertowel\Component\Theme\ThemeInterface" autowire="false">
        </service>


        <service id="Papertowel\Service\Theme\ThemeProvider" autowire="true" public="true">
            <argument type="service" id="logger"/>
            <argument type="service" id="kernel"/>
            <argument type="string">%kernel.project_dir%/themes</argument>
        </service>
        <service id="papertowel.service.theme.provider" alias="Papertowel\Service\Theme\ThemeProvider"/>

        <service id="Papertowel\Service\Plugin\PluginProvider" autowire="true" public="true">
            <argument type="service" id="logger"/>
            <argument type="string">%kernel.project_dir%/plugins</argument>
        </service>
        <service id="papertowel.service.plugin.provider" alias="Papertowel\Service\Plugin\PluginProvider"/>

        <service id="Papertowel\Service\Website\WebsiteProvider" autowire="true" public="true">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="logger"/>
        </service>
        <service id="papertowel.service.website.provider" alias="Papertowel\Service\Website\WebsiteProvider"/>

        <service id="Papertowel\Service\Language\LanguageProvider" autowire="false" public="true">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Papertowel\Service\Session\SessionProvider"/>
        </service>
        <service id="papertowel.service.language.provider" alias="Papertowel\Service\Language\LanguageProvider"/>

        <service id="Papertowel\Service\Session\SessionProvider" autowire="true" public="true">
            <argument type="service" id="request_stack"/>
        </service>
        <service id="papertowel.service.session.session_provider" alias="Papertowel\Service\Session\SessionProvider"/>



        <service id="Papertowel\Service\Language\LanguageVariables" autowire="true" public="true">
            <argument type="service" id="Papertowel\Service\Website\WebsiteProvider"/>
            <argument type="service" id="Papertowel\Service\Language\LanguageProvider"/>
            <argument type="service" id="twig"/>
            <argument type="service" id="service_container"/>
        </service>
        <service id="papertowel.service.language.variables" alias="Papertowel\Service\Language\LanguageVariables"/>

        <prototype namespace="Papertowel\Controller\" resource="../src/Controller">
            <!--<argument type="service" id="service_container"/>-->
        </prototype>
    </services>
</container>
