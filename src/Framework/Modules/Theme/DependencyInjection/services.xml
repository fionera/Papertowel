<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--suppress XmlServiceArgumentInspection -->
        <service id="theme" synthetic="true" public="true" class="Papertowel\Framework\Modules\Theme\Struct\ThemeInterface" autowire="false">
        </service>

        <service id="Papertowel\Framework\Modules\Theme\ThemeProvider" autowire="true" public="false">
            <argument type="service" id="logger"/>
            <argument type="service" id="kernel"/>
            <argument type="string">%kernel.project_dir%/themes</argument>
        </service>
        <service id="papertowel.framework.theme.theme_provider" alias="Papertowel\Framework\Modules\Theme\ThemeProvider"/>
    </services>
</container>